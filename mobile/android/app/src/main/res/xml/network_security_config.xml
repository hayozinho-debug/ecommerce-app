<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permite tráfego HTTP claro para todos os domínios (desenvolvimento) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Configuração específica para IPs locais -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.5.4</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Emulador Android -->
    </domain-config>
</network-security-config>
